{
  "name": "nylas-e2e-tests",
  "version": "1.0.0",
  "description": "Playwright E2E tests for Nylas Air and UI",
  "private": true,
  "scripts": {
    "test": "playwright test",
    "test:all": "playwright test",
    "test:air": "playwright test --project=air-chromium",
    "test:ui": "playwright test --project=ui-chromium",
    "test:chat": "playwright test --project=chat-chromium",
    "test:air:ui": "playwright test --project=air-chromium --ui",
    "test:ui:ui": "playwright test --project=ui-chromium --ui",
    "test:air:headed": "playwright test --project=air-chromium --headed",
    "test:ui:headed": "playwright test --project=ui-chromium --headed",
    "test:air:debug": "playwright test --project=air-chromium --debug",
    "test:ui:debug": "playwright test --project=ui-chromium --debug",
    "test:ci": "playwright test --reporter=html",
    "report": "playwright show-report",
    "install:browsers": "playwright install chromium"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
